<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="Brille24\SyliusCustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionAssociation" table="brille24_customer_option_association">
        <unique-constraints>
            <unique-constraint columns="option_id,group_id"/>
        </unique-constraints>

        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="position" type="integer" />

        <many-to-one target-entity="Brille24\SyliusCustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionInterface" field="option" inversed-by="groupAssociations">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column nullable="false" on-delete="CASCADE"/>
        </many-to-one>
        <many-to-one target-entity="Brille24\SyliusCustomerOptionsPlugin\Entity\CustomerOptions\CustomerOptionGroupInterface" field="group" inversed-by="optionAssociations">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column nullable="false" on-delete="CASCADE"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
